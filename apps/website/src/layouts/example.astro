---
import Layout from './layout.astro';

export interface Props {
	title: string;
}

const {
    title
} = Astro.props as Props;
---

<Layout title={title}>
    <main class="layout example-layout" layout="column justify-stretch">
        <div class="example-layout__top-bar">
            <h2>Ripl - {title} Example</h2>
        </div>
        <div class="example-layout__body" self="size-x1">
            <slot></slot>
        </div>
    </main>
</Layout>

<style lang="scss">

    .example-layout__top-bar {
        padding: 0.5rem 1rem;
        border-bottom: 1px solid var(--border__colour);
    }

</style>